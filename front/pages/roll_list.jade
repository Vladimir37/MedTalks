extends basis/layout

block content
	h1 Личная лента
	- each item in data0
		h2=item.title
		p Тэги - #{item.tags}
		h3 Автор #{item.user.name}
		p!=item.text
		a(href="/article/" + item.id)
			input(type="button" value="Читать полностью")
		br
	- if(data1.current != 0)
		- var prev = +data1.current - 1
		a(href="/roll/" + prev)
			input(type="button" value="Предыдущая")
	- if(data1.current != data1.total)
		- var next = +data1.current + 1
		a(href="/roll/" + next)
			input(type="button" value="Следующая")